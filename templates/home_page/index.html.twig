                                        {{produit.name}}
                                    </h2>
                                    <p>
                                        {% if produit.content != ""%}
                                            {{produit.content | raw}}
                                        {% endif %}
                                    </p>
                                    </div>
                                    <div class="prix">
                                        {% if produit.price != ""%}
                                            {{(produit.price / 100)|number_format(2, ',', '.')  }}€
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Section Galerie Photos -->

    <section id="galerie">
        <div class="container">
            <h1>Galerie photos</h1>
            <div id="galeriePhotos" class="row">
            {% for galerie in galeries %}
                {% if galerie.image != ""%}
                <div class="col-6 col-md-3">
                    <div class="contentGalerie">
                        <a href="#" rel="noopener noreferrer" data-bs-toggle="modal" data-bs-target="#galerie{{ galerie.id }}" class="txtgalerie">
                            <img class="imgGalerie" src="./uploads/{{ galerie.image }}" alt="{{ galerie.titre }}">
                            <div class="hoverGalerie">
                                <p>
                                    {{ galerie.titre }}
                                </p>
                            </div>
                        </a>
                    </div>
                    <div class="modal fade" id="galerie{{ galerie.id }}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-xl">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">
                                        {{ galerie.titre }}
                                    </h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <img class="imgModal" src="./uploads/{{ galerie.image }}" alt="{{ galerie.titre }}">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endif %}
            {% endfor %}
            </div>
        </div>
    </section>

