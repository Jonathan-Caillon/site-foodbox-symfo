                                    <div class="prix">
                                        {% if produit.price != ""%}
                                        {{(produit.price / 100)|number_format(2, ',', '.')  }}€
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>

                <!-- Menu Desserts -->

                <div class="tab-pane fade" id="pills-dessert" role="tabpanel" aria-labelledby="pills-dessert-tab">
                    <div id="menuDesserts" class="row">
                        {% for produit in produits %}
                            {% if produit.produitCategorie == "Desserts"%}
