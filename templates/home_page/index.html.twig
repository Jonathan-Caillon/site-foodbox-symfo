                            {% endif %}
                        {% endfor %}
                    </div>
                </div>

                <!-- Menu sandwich -->

                <div class="tab-pane fade" id="pills-sandwich" role="tabpanel" aria-labelledby="pills-sandwich-tab">
                    <div id="menuSandwichs" class="row">
                        {% for produit in produits %}
                            {% if produit.produitCategorie == "Sandwichs"%}
                            <div class="col-12 col-md-6">
                                <div class="produits">
                                    <div>
                                        {% if produit.image != ""%}
                                        <img class="imgproduits" src="./uploads/{{ produit.image }}" alt="">
                                        {% endif %}
